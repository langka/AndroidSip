<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/frag_friend_search_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/friend_header"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/frag_friend_search_confirm"
        android:background="@color/G6"
        android:gravity="center"
        android:hint="点击搜索"
        android:textColor="@color/G2"
        android:textColorHint="@color/G4" />

    <TextView
        android:id="@+id/frag_friend_search_confirm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/friend_header"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="确认" />

    <com.bupt.androidsip.customview.MyGridView
        android:id="@+id/frag_friend_hot_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_friend_search_confirm"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/G7"
        android:numColumns="4">

    </com.bupt.androidsip.customview.MyGridView>
</RelativeLayout>