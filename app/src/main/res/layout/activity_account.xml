<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/G5"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/W1">

            <include
                android:id="@+id/header"
                layout="@layout/header"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frag_head_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_sentiment_satisfied_black_90dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frag_head_image"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_nickname"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_description"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_sex"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_account_id"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_email"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/G7"/>

                <include
                    android:id="@+id/frag_registration_time"
                    layout="@layout/item_frag_me"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>