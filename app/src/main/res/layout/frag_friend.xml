<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friend_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/btn_blue">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/xusong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系人"
            android:textColor="@color/W1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/frag_friend_append"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="添加"
            android:textColor="@color/W1"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friend_header"
        android:layout_marginBottom="60dp"
        android:overScrollMode="never" />

    <com.bupt.androidsip.customview.SlideBar
        android:id="@+id/frag_friend_slidebar"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp" />

    <include
        android:id="@+id/loadingview"
        layout="@layout/layout_loading" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/frag_friend_append_add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/friend_list"
        android:layout_gravity="bottom|end"

    />


</RelativeLayout>